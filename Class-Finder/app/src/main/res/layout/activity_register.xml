<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true">

    <RelativeLayout
        android:id="@+id/activity_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="cs.b07.cscb07courseproject.activities.RegisterActivity">

        <EditText
            android:id="@+id/activity_register_et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="email"
            android:inputType="textWebEmailAddress|textCapWords" />

        <EditText
            android:id="@+id/activity_register_et_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_register_et_email"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/activity_register_et_password_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/activity_register_et_password"
            android:ems="10"
            android:hint="password_confirm"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/activity_register_et_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_register_et_password_confirm"
            android:ems="10"
            android:hint="first_name"
            android:inputType="textPersonName|textCapWords" />

        <EditText
            android:id="@+id/activity_register_et_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_register_et_first_name"
            android:ems="10"
            android:hint="last_name"
            android:inputType="textPersonName|textCapWords" />

        <EditText
            android:id="@+id/activity_register_et_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_register_et_last_name"
            android:ems="10"
            android:hint="address"
            android:inputType="textPersonName|textCapWords" />

        <Button
            android:id="@+id/activity_register_bt_SignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:onClick="loginToDashboard"
            android:text="Sign up" />

    </RelativeLayout>
</ScrollView>
